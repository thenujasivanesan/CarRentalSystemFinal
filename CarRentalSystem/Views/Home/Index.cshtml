@model IEnumerable<Car>
@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron bg-primary text-white p-5 rounded mb-4">
    <div class="container">
        <h1 class="display-4">Welcome to Car Rental System</h1>
        <p class="lead">Find and rent the perfect car for your journey</p>
        @if (!ViewBag.IsLoggedIn)
        {
            <a class="btn btn-light btn-lg" href="@Url.Action("Register", "Account")" role="button">
                Get Started <i class="bi bi-arrow-right"></i>
            </a>
        }
    </div>
</div>

<!-- Search and Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Search Cars</label>
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control"
                        placeholder="Search by name, brand, or model">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Number of Seats</label>
                    <select name="seats" class="form-select">
                        <option value="">All Seat Counts</option>
                        <option value="2" selected="@(ViewBag.Seats == 2)">2 Seats</option>
                        <option value="4" selected="@(ViewBag.Seats == 4)">4 Seats</option>
                        <option value="5" selected="@(ViewBag.Seats == 5)">5 Seats</option>
                        <option value="7" selected="@(ViewBag.Seats == 7)">7 Seats</option>
                        <option value="8" selected="@(ViewBag.Seats == 8)">8+ Seats</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



<!-- Cars Grid -->
<div class="row">
    @if (Model.Any())
    {
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card car-card h-100">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(car.ImageUrl))
                        {
                            <img src="@car.ImageUrl" class="card-img-top" alt="@car.CarName"
                                style="height: 200px; object-fit: cover;">
                        }
                        else if (!string.IsNullOrEmpty(car.ImagePath))
                        {
                            <img src="@Url.Content("~/uploads/" + car.ImagePath)" class="card-img-top" alt="@car.CarName"
                                style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top d-flex align-items-center justify-content-center bg-light"
                                style="height: 200px;">
                                <i class="bi bi-car-front display-1 text-muted"></i>
                            </div>
                        }

                        <span class="badge availability-badge @(car.IsAvailable ? "bg-success" : "bg-danger")">
                            @(car.IsAvailable ? "Available" : "Booked")
                        </span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@car.CarName</h5>
                        <p class="card-text">
                            <strong>Brand:</strong> @car.Brand<br>
                            <strong>Model Year:</strong> @car.CarModel<br>
                            <strong>Seats:</strong> <i class="bi bi-people"></i> @car.Seats passengers<br>
                            <strong>Status:</strong>
                            <span class="@(car.IsAvailable ? "text-success" : "text-danger")">
                                @(car.IsAvailable ? "Available" : "Booked")
                            </span>
                        </p>

                        <div class="mt-auto">
                            <a href="@Url.Action("CarDetails", "Home", new { id = car.CarID })" class="btn btn-outline-primary">
                                <i class="bi bi-eye"></i> View Details
                            </a>

                            @if (car.IsAvailable)
                            {
                                @if (ViewBag.IsCustomer)
                                {
                                    <a href="@Url.Action("Book", "Bookings", new { carId = car.CarID })" class="btn btn-success">
                                        <i class="bi bi-calendar-check"></i> Book Now
                                    </a>
                                }
                                else if (!ViewBag.IsLoggedIn)
                                {
                                    <a href="@Url.Action("Login", "Account")" class="btn btn-warning">
                                        <i class="bi bi-box-arrow-in-right"></i> Login to Book
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info text-center">
                <h4><i class="bi bi-info-circle"></i> No cars found</h4>
                <p>Try adjusting your search criteria or check back later for new cars.</p>
            </div>
        </div>
    }
</div>
