@model Car
@{
    ViewData["Title"] = "Delete Car";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Cars")">Car Management</a></li>
        <li class="breadcrumb-item active">Delete Car</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h3><i class="bi bi-exclamation-triangle"></i> Delete Car</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> 
                    <strong>Warning!</strong> Are you sure you want to delete this car? This action cannot be undone.
                </div>
                
                <div class="row">
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.CarName" class="img-fluid rounded">
                        }
                        else if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Url.Content("~/uploads/" + Model.ImagePath)" alt="@Model.CarName" class="img-fluid rounded">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 200px;">
                                <i class="bi bi-car-front display-1 text-muted"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">Car Name:</dt>
                            <dd class="col-sm-8">@Model.CarName</dd>
                            
                            <dt class="col-sm-4">Model:</dt>
                            <dd class="col-sm-8">@Model.CarModel</dd>
                            
                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                                    @(Model.IsAvailable ? "Available" : "Booked")
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="CarID" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Car
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
