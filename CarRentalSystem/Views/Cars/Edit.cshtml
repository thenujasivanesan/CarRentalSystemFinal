@model CarViewModel
@{
    ViewData["Title"] = "Edit Car";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Cars")">Car Management</a></li>
        <li class="breadcrumb-item active">Edit Car</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3><i class="bi bi-pencil"></i> Edit Car</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input asp-for="CarID" type="hidden" />
                    <input asp-for="ExistingImagePath" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CarName" class="form-label">Car Name</label>
                                <input asp-for="CarName" class="form-control" />
                                <span asp-validation-for="CarName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Brand" class="form-label">Brand</label>
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CarModel" class="form-label">Model Year</label>
                                <input asp-for="CarModel" class="form-control" />
                                <span asp-validation-for="CarModel" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Seats" class="form-label">Number of Seats</label>
                                <input asp-for="Seats" type="number" class="form-control" min="1" max="50" />
                                <span asp-validation-for="Seats" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DailyRate" class="form-label">Daily Rate ($)</label>
                                <input asp-for="DailyRate" type="number" step="0.01" min="0.01" max="9999.99"
                                    class="form-control" />
                                <span asp-validation-for="DailyRate" class="text-danger"></span>
                                <small class="form-text text-muted">Price per day in USD</small>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Car Image</label>
                        <div class="card">
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl) ||
                                                                !string.IsNullOrEmpty(Model.ExistingImagePath))
                                {
                                    <div class="mb-3">
                                        <label class="form-label">Current Image:</label>
                                        <div>
                                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                            {
                                                <img src="@Model.ImageUrl" alt="Current image" class="img-thumbnail"
                                                    style="max-width: 200px; max-height: 150px;">
                                                <p class="text-muted mt-1">Source: URL</p>
                                            }
                                            else if (!string.IsNullOrEmpty(Model.ExistingImagePath))
                                            {
                                                <img src="@Url.Content("~/uploads/" + Model.ExistingImagePath)"
                                                    alt="Current image" class="img-thumbnail"
                                                    style="max-width: 200px; max-height: 150px;">
                                                <p class="text-muted mt-1">Source: Uploaded file</p>
                                            }
                                        </div>
                                    </div>
                                }

                                <div class="row">
                                    <div class="col-md-6">
                                        <label asp-for="ImageUrl" class="form-label">Image URL</label>
                                        <input asp-for="ImageUrl" class="form-control"
                                            placeholder="https://example.com/image.jpg" />
                                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                        <small class="form-text text-muted">Provide a direct link to an image</small>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="ImageUpload" class="form-label">Upload New Image</label>
                                        <input asp-for="ImageUpload" type="file" class="form-control"
                                            accept="image/*" />
                                        <span asp-validation-for="ImageUpload" class="text-danger"></span>
                                        <small class="form-text text-muted">Or upload a new image file</small>
                                    </div>
                                </div>
                                <div class="alert alert-info mt-2">
                                    <i class="bi bi-info-circle"></i> Leave both fields empty to keep the current image,
                                    or provide either a URL OR upload a new file.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                            <label asp-for="IsAvailable" class="form-check-label">
                                Car is available for booking
                            </label>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Update Car
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Clear the other field when one is selected
        document.getElementById('ImageUrl').addEventListener('input', function () {
            if (this.value) {
                document.getElementById('ImageUpload').value = '';
            }
        });

        document.getElementById('ImageUpload').addEventListener('change', function () {
            if (this.files.length > 0) {
                document.getElementById('ImageUrl').value = '';
            }
        });
    </script>
}