@model IEnumerable<Car>
@{
    ViewData["Title"] = "Car Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-car-front"></i> Car Management</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Car
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Image</th>
                            <th>Car Name</th>
                            <th>Brand</th>
                            <th>Model Year</th>
                            <th>Seats</th>
                            <th>Daily Rate</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(car.ImageUrl))
                                    {
                                        <img src="@car.ImageUrl" alt="@car.CarName" class="img-thumbnail"
                                            style="width: 80px; height: 60px; object-fit: cover;">
                                    }
                                    else if (!string.IsNullOrEmpty(car.ImagePath))
                                    {
                                        <img src="@Url.Content("~/uploads/" + car.ImagePath)" alt="@car.CarName"
                                            class="img-thumbnail" style="width: 80px; height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center img-thumbnail"
                                            style="width: 80px; height: 60px;">
                                            <i class="bi bi-car-front text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <strong>@car.CarName</strong>
                                </td>
                                <td>@car.Brand</td>
                                <td>@car.CarModel</td>
                                <td>
                                    <i class="bi bi-people"></i> @car.Seats
                                </td>
                                <td>
                                    <strong>$@car.DailyRate.ToString("F2")</strong>
                                </td>
                                <td>
                                    <span class="badge @(car.IsAvailable ? "bg-success" : "bg-danger")">
                                        @(car.IsAvailable ? "Available" : "Booked")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = car.CarID })"
                                            class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = car.CarID })"
                                            class="btn btn-outline-warning btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = car.CarID })"
                                            class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-car-front display-1 text-muted"></i>
                <h4 class="text-muted">No cars found</h4>
                <p class="text-muted">Start by adding your first car to the system.</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add First Car
                </a>
            </div>
        }
    </div>
</div>