@model User
@{
    ViewData["Title"] = "My Profile";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Customer")">Dashboard</a></li>
        <li class="breadcrumb-item active">My Profile</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-circle"></i> My Profile</h2>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-person-vcard"></i> Personal Information</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Full Name:</label>
                            <p class="form-control-plaintext">@Model.FullName</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email Address:</label>
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Phone Number:</label>
                            <p class="form-control-plaintext">@Model.PhoneNumber</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">NIC Number:</label>
                            <p class="form-control-plaintext">@Model.NICNumber</p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Address:</label>
                    <p class="form-control-plaintext">@Model.Address</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-gear"></i> Account Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">Username:</label>
                    <p class="form-control-plaintext">@Model.Username</p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Account Type:</label>
                    <p class="form-control-plaintext">
                        <span class="badge bg-primary">@Model.Role</span>
                    </p>
                </div>

                @* <div class="mb-3">
                    <label class="form-label fw-bold">Member Since:</label>
                    <p class="form-control-plaintext">
                        <i class="bi bi-calendar-check text-success"></i> 
                        Registration Date
                    </p>
                </div> *@
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-tools"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("MyBookings", "Bookings")" class="btn btn-outline-primary">
                        <i class="bi bi-calendar-check"></i> View My Bookings
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-success">
                        <i class="bi bi-car-front"></i> Browse Cars
                    </a>
                    <button type="button" class="btn btn-outline-warning"
                        onclick="alert('Profile editing feature coming soon!')">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-graph-up"></i> Account Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <div class="border-end">
                            <h4 class="text-primary">@ViewBag.TotalBookings</h4>
                            <p class="text-muted mb-0">Total Bookings</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border-end">
                            <h4 class="text-success">$@ViewBag.TotalSpent</h4>
                            <p class="text-muted mb-0">Total Spent</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h4 class="text-warning">Active</h4>
                        <p class="text-muted mb-0">Account Status</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>