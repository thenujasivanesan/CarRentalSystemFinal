@model IEnumerable<Car>
@{
    ViewData["Title"] = "Car Inventory Report";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-car-front"></i> Car Inventory Report</h2>
    <div>
        <a href="@Url.Action("CarInventoryReport", new { format = "pdf" })" class="btn btn-danger">
            <i class="bi bi-file-earmark-pdf"></i> Export PDF
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Reports
        </a>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h4>@Model.Count()</h4>
                <p class="mb-0">Total Cars</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h4>@Model.Count(c => c.IsAvailable)</h4>
                <p class="mb-0">Available</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <h4>@Model.Count(c => !c.IsAvailable)</h4>
                <p class="mb-0">Booked</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h4>@(Model.Count(c => c.IsAvailable) > 0 ? Math.Round((double)Model.Count(c => c.IsAvailable) / Model.Count() * 100, 1) : 0)%</h4>
                <p class="mb-0">Availability Rate</p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Car Inventory Details</h5>
        <small class="text-muted">Generated on: @DateTime.Now.ToString("MMMM dd, yyyy 'at' HH:mm")</small>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Car ID</th>
                            <th>Image</th>
                            <th>Car Name</th>
                            <th>Model</th>
                            <th>Status</th>
                            <th>Image Source</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model.OrderBy(c => c.CarName))
                        {
                            <tr>
                                <td><strong>#@car.CarID</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(car.ImageUrl))
                                    {
                                        <img src="@car.ImageUrl" alt="@car.CarName" class="img-thumbnail" style="width: 60px; height: 45px; object-fit: cover;">
                                    }
                                    else if (!string.IsNullOrEmpty(car.ImagePath))
                                    {
                                        <img src="@Url.Content("~/uploads/" + car.ImagePath)" alt="@car.CarName" class="img-thumbnail" style="width: 60px; height: 45px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center img-thumbnail" style="width: 60px; height: 45px;">
                                            <i class="bi bi-car-front text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td><strong>@car.CarName</strong></td>
                                <td>@car.CarModel</td>
                                <td>
                                    <span class="badge @(car.IsAvailable ? "bg-success" : "bg-danger")">
                                        @(car.IsAvailable ? "Available" : "Booked")
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(car.ImageUrl))
                                    {
                                        <span class="badge bg-info">URL</span>
                                    }
                                    else if (!string.IsNullOrEmpty(car.ImagePath))
                                    {
                                        <span class="badge bg-primary">Upload</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">None</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-car-front display-1 text-muted"></i>
                <h4 class="text-muted">No cars found</h4>
                <p class="text-muted">No cars are currently in the system.</p>
            </div>
        }
    </div>
</div>
