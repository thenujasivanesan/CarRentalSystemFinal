@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Bookings Report";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-calendar-check"></i> Bookings Report</h2>
    <div>
        <a href="@Url.Action("BookingsReport", new { format = "pdf" })" class="btn btn-danger">
            <i class="bi bi-file-earmark-pdf"></i> Export PDF
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Reports
        </a>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h4>@Model.Count()</h4>
                <p class="mb-0">Total Bookings</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h4>$@Model.Sum(b => b.TotalCost).ToString("F2")</h4>
                <p class="mb-0">Total Revenue</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h4>@Model.Select(b => b.CustomerID).Distinct().Count()</h4>
                <p class="mb-0">Unique Customers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <h4>@Model.Sum(b => (b.ReturnDate - b.PickupDate).Days)</h4>
                <p class="mb-0">Total Rental Days</p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Booking Details</h5>
        <small class="text-muted">Generated on: @DateTime.Now.ToString("MMMM dd, yyyy 'at' HH:mm")</small>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Booking ID</th>
                            <th>Customer</th>
                            <th>Car</th>
                            <th>Pickup Date</th>
                            <th>Return Date</th>
                            <th>Days</th>
                            <th>Total Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.OrderByDescending(b => b.BookingID))
                        {
                            var days = (booking.ReturnDate - booking.PickupDate).Days;
                            <tr>
                                <td><strong>#@booking.BookingID</strong></td>
                                <td>@booking.Customer.Username</td>
                                <td>@booking.Car.CarName (@booking.Car.CarModel)</td>
                                <td>@booking.PickupDate.ToString("MMM dd, yyyy")</td>
                                <td>@booking.ReturnDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge bg-info">@days day@(days != 1 ? "s" : "")</span>
                                </td>
                                <td><strong class="text-success">$@booking.TotalCost.ToString("F2")</strong></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Additional Statistics -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6>Revenue Statistics</h6>
                            <p class="mb-1">Average Booking Value: <strong>${@(Model.Any() ? Model.Average(b => b.TotalCost).ToString("F2") : "0.00")}</strong></p>
                            <p class="mb-1">Highest Booking: <strong>${@(Model.Any() ? Model.Max(b => b.TotalCost).ToString("F2") : "0.00")}</strong></p>
                            <p class="mb-0">Lowest Booking: <strong>${@(Model.Any() ? Model.Min(b => b.TotalCost).ToString("F2") : "0.00")}</strong></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6>Rental Statistics</h6>
                            <p class="mb-1">Average Rental Period: <strong>@(Model.Any() ? Model.Average(b => (b.ReturnDate - b.PickupDate).Days).ToString("F1") : "0") days</strong></p>
                            <p class="mb-1">Longest Rental: <strong>@(Model.Any() ? Model.Max(b => (b.ReturnDate - b.PickupDate).Days) : 0) days</strong></p>
                            <p class="mb-0">Shortest Rental: <strong>@(Model.Any() ? Model.Min(b => (b.ReturnDate - b.PickupDate).Days) : 0) days</strong></p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x display-1 text-muted"></i>
                <h4 class="text-muted">No bookings found</h4>
                <p class="text-muted">No bookings have been made yet.</p>
            </div>
        }
    </div>
</div>
