@{
    ViewData["Title"] = "Reports";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-file-earmark-text"></i> Reports</h2>
    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-primary">
        <i class="bi bi-house"></i> Back to Dashboard
    </a>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-car-front"></i> Car Inventory Report</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Generate a comprehensive report of all cars in the system including their status
                    and details.</p>
                <div class="d-grid gap-2">
                    <a href="@Url.Action("CarInventoryReport")" class="btn btn-outline-primary">
                        <i class="bi bi-eye"></i> View Report
                    </a>
                    <a href="@Url.Action("CarInventoryReport", new { format = "pdf" })" class="btn btn-danger btn-sm">
                        <i class="bi bi-file-earmark-pdf"></i> Export PDF
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Bookings Report</h5>
            </div>
            <div class="card-body">
                <p class="card-text">View detailed booking information including customer details, rental periods, and
                    revenue data.</p>
                <div class="d-grid gap-2">
                    <a href="@Url.Action("BookingsReport")" class="btn btn-outline-info">
                        <i class="bi bi-eye"></i> View Report
                    </a>
                    <a href="@Url.Action("BookingsReport", new { format = "pdf" })" class="btn btn-danger btn-sm">
                        <i class="bi bi-file-earmark-pdf"></i> Export PDF
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0"><i class="bi bi-people"></i> Customers Report</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Generate a report of all customers with their booking history and spending
                    patterns.</p>
                <div class="d-grid gap-2">
                    <a href="@Url.Action("CustomersReport")" class="btn btn-outline-warning">
                        <i class="bi bi-eye"></i> View Report
                    </a>
                    <a href="@Url.Action("CustomersReport", new { format = "pdf" })" class="btn btn-danger btn-sm">
                        <i class="bi bi-file-earmark-pdf"></i> Export PDF
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-info-circle"></i> Report Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Available Formats:</h6>
                        <ul>
                            <li><strong>View:</strong> Display the report in your browser</li>
                            <li><strong>PDF:</strong> Download as a PDF document</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Report Features:</h6>
                        <ul>
                            <li>Real-time data from the database</li>
                            <li>Professional formatting</li>
                            <li>Summary statistics included</li>
                            <li>Export-ready formats</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>