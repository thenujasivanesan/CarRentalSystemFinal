@model IEnumerable<User>
@{
    ViewData["Title"] = "Customers Report";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people"></i> Customers Report</h2>
    <div>
        <a href="@Url.Action("CustomersReport", new { format = "pdf" })" class="btn btn-danger">
            <i class="bi bi-file-earmark-pdf"></i> Export PDF
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Reports
        </a>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h4>@Model.Count()</h4>
                <p class="mb-0">Total Customers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h4>@Model.Count(c => c.Bookings.Any())</h4>
                <p class="mb-0">Active Customers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h4>@Model.Sum(c => c.Bookings.Count)</h4>
                <p class="mb-0">Total Bookings</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <h4>$@Model.Sum(c => c.Bookings.Sum(b => b.TotalCost)).ToString("F2")</h4>
                <p class="mb-0">Total Revenue</p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Customer Details</h5>
        <small class="text-muted">Generated on: @DateTime.Now.ToString("MMMM dd, yyyy 'at' HH:mm")</small>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Customer ID</th>
                            <th>Username</th>
                            <th>Total Bookings</th>
                            <th>Total Spent</th>
                            <th>Average Booking Value</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.OrderByDescending(c => c.Bookings.Sum(b => b.TotalCost)))
                        {
                            var totalBookings = customer.Bookings.Count;
                            var totalSpent = customer.Bookings.Sum(b => b.TotalCost);
                            var avgBookingValue = totalBookings > 0 ? totalSpent / totalBookings : 0;

                            <tr>
                                <td><strong>#@customer.UserID</strong></td>
                                <td><strong>@customer.Username</strong></td>
                                <td>
                                    <span class="badge bg-info">@totalBookings</span>
                                </td>
                                <td><strong class="text-success">$@totalSpent.ToString("F2")</strong></td>
                                <td>$@avgBookingValue.ToString("F2")</td>
                                <td>
                                    @if (totalBookings > 0)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Customer Segmentation -->
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6>High Value Customers</h6>
                            <p class="mb-1">Customers with $200+ spent</p>
                            <h4 class="text-success">@Model.Count(c => c.Bookings.Sum(b => b.TotalCost) >= 200)</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6>Regular Customers</h6>
                            <p class="mb-1">Customers with 3+ bookings</p>
                            <h4 class="text-info">@Model.Count(c => c.Bookings.Count >= 3)</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6>New Customers</h6>
                            <p class="mb-1">Customers with no bookings</p>
                            <h4 class="text-warning">@Model.Count(c => !c.Bookings.Any())</h4>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Top Customers -->
            @if (Model.Any(c => c.Bookings.Any()))
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card bg-light">
                            <div class="card-header">
                                <h6>Top 5 Customers by Revenue</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Rank</th>
                                                <th>Customer</th>
                                                <th>Total Spent</th>
                                                <th>Bookings</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var topCustomers = Model.Where(c => c.Bookings.Any())
                                                .OrderByDescending(c => c.Bookings.Sum(b => b.TotalCost))
                                                .Take(5)
                                                .ToList();
                                            }
                                            @for (int i = 0; i < topCustomers.Count; i++)
                                            {
                                                var customer = topCustomers[i];
                                                <tr>
                                                    <td><strong>@(i + 1)</strong></td>
                                                    <td>@customer.Username</td>
                                                    <td class="text-success">$@customer.Bookings.Sum(b =>
                                                                                                    b.TotalCost).ToString("F2")</td>
                                        <td>@customer.Bookings.Count</td>
                                    </tr>
                                                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people display-1 text-muted"></i>
                <h4 class="text-muted">No customers found</h4>
                <p class="text-muted">No customers are currently registered in the system.</p>
            </div>
        }
    </div>
</div>